{
    "compilerOptions": {
      "esModuleInterop": true, // import React from 'react' 로 사용가능 import * as React from 대신
      "sourceMap": true,
      "lib": ["ES2020", "DOM"],
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "Node",
      "target": "es5",
      "strict": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
       "@src/*":[
         "src/*"
       ]
      }
    }
}
  